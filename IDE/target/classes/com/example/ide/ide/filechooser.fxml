<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.ide.ide.FileChooserController">
    <top>
        <TextField fx:id="pathField" promptText="Path..." />
    </top>

    <center>
        <ListView fx:id="fileListView" prefHeight="400.0" prefWidth="324.0" />
    </center>

    <bottom>
        <HBox alignment="center_right" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#handleCancel" text="Cancel" />
            <Button onAction="#handleSelect" text="Select" />
        </HBox>
    </bottom>
</BorderPane>
